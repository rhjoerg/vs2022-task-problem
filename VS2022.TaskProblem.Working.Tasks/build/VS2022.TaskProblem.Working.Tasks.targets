<?xml version="1.0" encoding="utf-8" ?>
<Project>

  <PropertyGroup>
    <HelloTaskAssemblyDir Condition="'$(MSBuildRuntimeType)' == 'Core'">$([MSBuild]::NormalizeDirectory( $(MSBuildThisFileDirectory), "..", "lib", "net6.0" ))</HelloTaskAssemblyDir>
    <HelloTaskAssemblyDir Condition="'$(MSBuildRuntimeType)' != 'Core'">$([MSBuild]::NormalizeDirectory( $(MSBuildThisFileDirectory), "..", "lib", "net472" ))</HelloTaskAssemblyDir>
    <HelloTaskAssemblyFile>$([MSBuild]::NormalizePath( $(HelloTaskAssemblyDir), "VS2022.TaskProblem.Working.Tasks.dll" ))</HelloTaskAssemblyFile>
  </PropertyGroup>

  <UsingTask TaskName="VS2022.TaskProblem.Working.Tasks.HelloTask" AssemblyFile="$(HelloTaskAssemblyFile)" />

</Project>